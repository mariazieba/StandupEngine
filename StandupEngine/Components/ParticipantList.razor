<div class="container position-relative">
    <div class="row">
        <div class="col">
            <ListGroup Mode=@GetListMode() @bind-SelectedItem="selectedReadyItem" Float=Float.Default Overflow=Overflow.Auto Height="Height.Is75" Border=Border.Dark>

                <ListGroupItem TextOverflow=TextOverflow.Wrap>
                    <div class="row">
                        <div class="col">
                            <Button Size=Size.ExtraSmall Color=Color.Success Outline Float=Float.End Clicked="@(() => AddAllParticipants())">
                                <span class="oi oi-flash"></span> Add All!
                            </Button>
                        </div>
                        <div class="col">
                            <Button Color="Color.Danger" Outline Float=Float.End Size=Size.ExtraSmall Clicked="@(() => ClearParticipantsReady())">
                                <Icon Name="IconName.Delete"></Icon>    Remove all
                            </Button>
                        </div>
                    </div>
                </ListGroupItem>

                @foreach (var ready in Engine.ParticipantsReady)
                {
                    <ListGroupItem Name="@($"{ready}{Engine.ParticipantsReady.IndexOf(ready)}")" Clicked="@(() => AddParticipant(ready))">
                        @ready
                        <Button Color=Color.Default Size=Size.Small Type=ButtonType.Link Float=Float.End Clicked="@(() => RemoveParticipantReady(ready))">
                            <span class="oi oi-delete"></span>
                        </Button>
                    </ListGroupItem>
                }
                <ListGroupItem>
                    <div class="row">
                        <div class="col"><TextEdit Placeholder="Add new..." @bind-Text="newTeamMember" MaxLength="20" /></div>
                        <div class="col">
                            <Button Size=Size.ExtraSmall Clicked="@(() => AddParticipantReady(newTeamMember))">
                                <span class="nes-badge is-icon is-small">
                                    <span class="is-warning"><span class="oi oi-check"></span></span>
                                </span>
                            </Button>
                        </div>
                    </div>
                </ListGroupItem>
                <ListGroupItem>
                    <div class="row">
                    </div>
                </ListGroupItem>
            </ListGroup>
        </div>
        <div class="col">
            <ListGroup Float=Float.Default Overflow=Overflow.Auto Height="Height.Is75" Border=Border.Dark>
                <ListGroupItem>
                    <div class=row>
                        <div class="col">
                            <Button Size=Size.ExtraSmall Color="Color.Danger" Outline Float="Float.End" Clicked="@(() => RemoveAllParticipants())">
                                <span class="oi oi-delete small"></span>   Remove all
                            </Button>
                        </div>
                    </div>
                </ListGroupItem>
                @foreach (var participant in Engine.Participants)
                {
                    <ListGroupItem>
                        @participant
                        <Button Color=Color.Default Size=Size.Small Type=ButtonType.Link Float=Float.End Clicked="@(() => RemoveParticipant(participant))">
                            <span class="oi oi-delete"></span>
                        </Button>
                    </ListGroupItem>
                }
            </ListGroup>
        </div>
    </div>
</div>