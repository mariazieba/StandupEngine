<div class="container position-relative">
    <div class="row">
        <div class="col">
            <ListGroup Mode=@GetListMode() @bind-SelectedItem="selectedReadyItem" Float=Float.Default Overflow=Overflow.Auto Height="Height.Is75" Border=Border.Dark>

                <ListGroupItem TextOverflow=TextOverflow.Wrap>
                    <div class="row">
                        <div class="col">
                            <Button Size=Size.Small Color=Color.Success Class="nes-btn is-success" Float=Float.End Clicked="@(() => AddAllParticipants())">
                                <span class="oi oi-flash"></span> Add All!
                            </Button>
                        </div>
                        <div class="col">
                            <Button Color="Color.Danger" Class="nes-btn is-danger" Float=Float.End Size=Size.Small Clicked="@(() => ClearParticipantsReady())">
                                <Icon Name="IconName.Delete"></Icon>    Remove all
                            </Button>
                        </div>
                    </div>
                </ListGroupItem>

                @foreach (var ready in Engine.ParticipantsReady)
                {
                    <ListGroupItem Name="@($"{ready}{Engine.ParticipantsReady.IndexOf(ready)}")" Clicked="@(() => AddParticipant(ready))">
                        @ready
                        <Button Color=Color.Default Size=Size.Small Type=ButtonType.Link Float=Float.End Clicked="@(() => RemoveParticipantReady(ready))">
                            <span class="oi oi-delete"></span>
                        </Button>
                    </ListGroupItem>
                }
                <ListGroupItem>
                    <div class="row">
                    </div>
                </ListGroupItem>
            </ListGroup>
        </div>
        <div class="col">
            <ListGroup Float=Float.Default Overflow=Overflow.Auto Height="Height.Is75" Border=Border.Dark>
                <ListGroupItem>
                    <div class=row>
                        <div class="col">
                            <Button Size=Size.Small Class="nes-btn is-danger" Color="Color.Danger" Float="Float.End" Clicked="@(() => RemoveAllParticipants())">
                                <span class="oi oi-delete small"></span>   Remove all
                            </Button>
                        </div>
                    </div>
                </ListGroupItem>
                @foreach (var participant in Engine.Participants)
                {
                    <ListGroupItem>
                        @participant
                        <Button Color=Color.Default Size=Size.Small Type=ButtonType.Link Float=Float.End Clicked="@(() => RemoveParticipant(participant))">
                            <span class="oi oi-delete"></span>
                        </Button>
                    </ListGroupItem>
                }
            </ListGroup>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="row">
                <div class="col">
                    <TextEdit Placeholder="Add new..." @bind-Text="newTeamMember" MaxLength="20" Border=Border.Dark Float=Float.Start Width=Width.Is75 id="memberInput" />
                    <Button Size=Size.ExtraSmall Class="nes-btn is-success" Float=Float.End Clicked="@(() => AddParticipantReady(newTeamMember))" id="inputButton">
                        Add
                    </Button>
                </div>                    
            </div>
        </div>
        <div class="col"></div>
    </div>
</div>