@page "/"
@using StandupEngine.Services
@using StandupEngine.Components
@using System.Text.Json
@inject IEngine _engine
@inject HttpClient _httpClient

<Jumbotron>
    <JumbotronTitle> Welcome to your Standup Engine!</JumbotronTitle>
    <JumbotronSubtitle>Don't waste your time on thinking about the meeting order any more!</JumbotronSubtitle>
</Jumbotron>

<ParticipantList />

<div class="row"><Button Color="Color.Success"><Icon Name="IconName.Lightbulb"></Icon>   Who will start today, Engine?</Button></div>

@code {
    protected override async Task OnInitializedAsync()
    {
        string jsonPrompts = await _httpClient.GetStringAsync(@"assets\sentences.json");
        
        _engine.LoadPrompts(jsonPrompts);
    }
}
